import java.util.*;
class Operations
{
public static void main(String awdc[])
{
Scanner sc=new Scanner(System.in);
int a,b,sum,sub,mul,div;
System.out.print("Enter a value:");
a=sc.nextInt();
System.out.print("Enter b value:");
b=sc.nextInt();
sum=a+b;
sub=a-b;
mul=a*b;
div=a/b;
System.out.println("sum=" + sum );  
System.out.println("sub=" + sub );
System.out.println("mul=" + mul );
System.out.println("div=" + div );
}
}

output:
C:\Users\user\Desktop>javac Operations.java

C:\Users\user\Desktop>java Operations
Enter a value:30
Enter b value:25
sum=55
sub=5
mul=750
div=1
